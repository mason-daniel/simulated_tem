#!/bin/bash
#
#   script to provide an input file for REALfit.exe 
#   using Doyle-Turner coefficients read from a data table
#
echo "Input/$1.dat" > Infile/infile.fit.in 
echo "Fit/$1.fit.dat" >> Infile/infile.fit.in 
grep "$1" Input/DoyleTurnerCoefficients_a.dat | awk '{print $2 " " $3 " " $4 " " $5 " " $6}' >> Infile/infile.fit.in 
grep "$1" Input/DoyleTurnerCoefficients_b.dat | awk '{print $2 " " $3 " " $4 " " $5 " " $6}' >> Infile/infile.fit.in 
cat Infile/infile.fit.in